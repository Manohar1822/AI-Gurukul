<%- include('partials/header') %>

<div class="container mt-5">
    <h1>Email with OTP sent Successfully on <%= email %> </h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            <form action="/verify" method="POST">
              <div class="form-group">
                <label for="OTP">*Enter OTP received on your mail</label>
                <input type="text" required class="form-control" name="OTP">
              </div>
              <button type="submit" class="btn btn-dark">Verify</button>
              <a class="btn btn-light btn-lg" href="/deleteorganization" role="button">Wrong Email-Id</a>
            </form>
  
          </div>
        </div>
      </div>
  
    </div>
  </div>
  


<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Exam: <%=Exam.examName%></h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/endExam" method="POST">
            <input type="hidden" name="examName" value="<%=Exam.examName%>">

            <%if(Question!=false){%>
                
                <%Question.forEach(function(question){%>
                    <form action="/giveExam" method="post">
                        <input type="hidden" name="examName" value="<%=Exam.examName%>">
                    <h3><%= question.questionNo %>) <%= question.question %> </h3>
                    <div class="form-group">
                        <label for="solution">*Solution</label>
                        <textarea name="answer"  cols="30" rows="10" required class="form-control" placeholder="An operating system (OS) is system software that manages computer hardware, software resources, and provides common services for computer programs."></textarea> 
        
                      </div>
                      <button type="submit" name="questionNo" value="<%=question.questionNo%>">Write Answer</button>
                    </form>
                <%})%>
            
            <%}%>
            
            
            <button type="submit" class="btn btn-dark">Submit All Answers and End Exam</button>
          </form>

        </div>
        <a href="/back" class="btn btn-light btn-lg" >Back to Home page</a>
      </div>
    </div>


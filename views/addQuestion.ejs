<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Add Questions for Exam: <%=Exams.examName%></h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/addQuestion" method="POST">
            <input type="hidden" name="examName" value="<%=Exams.examName%>">

            <%if(Question!=false){%>
                <%Question.forEach(function(question){%>
                    <p><%= question.questionNo %>) <%= question.question %></p>
                <%})%>
            <%}%>
            
            <div class="form-group">
                <label for="questionNo">*Question No.</label>
                <input type="text" required class="form-control" name="questionNo" placeholder="Q1A">
                <p style="color:red;"><%= message %> </p>
              </div>
              <div class="form-group">
                <label for="question">*Question</label>

                <input type="text" required class="form-control" name="question" placeholder="Define Operating System.">
              </div>
              <div class="form-group">
                <label for="solution">*Solution</label>
                <textarea name="solution"  cols="30" rows="10" required class="form-control" placeholder="An operating system (OS) is system software that manages computer hardware, software resources, and provides common services for computer programs."></textarea> 

              </div>
              <div class="form-group">
                <label for="Marks">*Marks for this Question</label>

                <input type="number" required class="form-control" name="maxMarks" placeholder="5">
              </div>
            <button type="submit" class="btn btn-dark">Add Question</button>
          </form>

        </div>
        <a href="/back" class="btn btn-light btn-lg" >Back to Home page</a>
      </div>
    </div>

